{% extends 'base.html.twig' %}

{% block body %}

{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.title) }}
        </div>
        <div class="col">
            {{ form_row(form.type) }}
        </div>
        <div class="col">
            {{ form_row(form.size) }}
        </div>
        <div class="col">
            {{ form_row(form.seconds) }}
        </div>
        <div class="col">
            {{ form_row(form.path) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.submit) }}
        </div>
    </div>
{{ form_end(form) }}

{% endblock body %}